<section class="py-5">
    <div class="row">

        <div class="col-lg-12 mb-6">
            <div class="card">
                <div class="card-header">
                    <h6 class="text-uppercase mb-0">List Discipline Student </h6>
                </div>
                <div class="card-body">
                    <table class="table table-striped table-hover card-text data-table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Student.RollNumber)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Student.Student_Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Discipline.Discipline_name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Discipline_Value)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Created_at)
                                </th>


                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Student.RollNumber)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Student.Student_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Discipline.Discipline_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Discipline_Value)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Created_at)
                                    </td>


                                    <td class="text-center">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.DisciplineStudent_id }, new { @class = "btn btn-primary" }) |
                                        @Html.ActionLink("Details", "Details", new { id = item.DisciplineStudent_id }, new { @class = "btn btn-success" }) |
                                        @Html.ActionLink("Delete", "Delete", new { id = item.DisciplineStudent_id }, new { @class = "btn btn-danger" })
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</section>
@section scripts{

    <script src="~/Content/js/data-table.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.data-table').DataTable();
        });
    </script>
