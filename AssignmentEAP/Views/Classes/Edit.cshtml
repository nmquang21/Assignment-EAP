@using System.Web.UI.WebControls
@model AssignmentEAP.Models.Class
@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid px-xl-5">
        <section class="py-5">
            <div class="row">
                <!-- Basic Form-->
                <div class="col-lg-2 mb-5"></div>
                <!-- Inline Form-->
                <div class="col-lg-8 mb-5">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="h6 text-uppercase mb-0">Edit Class</h3>
                        </div>
                        <div class="card-body">
                            <form class="form-inline">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="row">
                                    <div class="col-md-2"></div>
                                    <div class="form-group col-md-8">
                                        @Html.HiddenFor(model => model.Class_Id)
                                        @Html.LabelFor(model => model.Class_name, htmlAttributes: new { @class = "sr-only" })
                                        @Html.EditorFor(model => model.Class_name, new { htmlAttributes = new { @class = "mr-3 form-control", @id = "inlineFormInput", @PlaceHolder = "Class Name" } })
                                        @Html.ValidationMessageFor(model => model.Class_name, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-2"></div>
                                </div>
                            </form>
                        </div>
                        <div class="form-group" style="text-align: center">
                            <div class="col-md-offset-2 col-md-12">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal Form-->
                <div class="col-lg-2 mb-5">
                </div>
                <!-- Form Elements -->
            </div>
        </section>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}